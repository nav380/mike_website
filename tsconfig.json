{
  "include": ["client/src", "shared"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "noEmit": true,

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "types": ["vite/client"],

    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  }
}